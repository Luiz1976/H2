# postgresql://USUARIO:SENHA@HOST/DB?sslmode=require&channel_binding=require
# OU
# postgres://USUARIO:SENHA@HOST:PORT/DB?sslmode=require
DATABASE_URL=

# ============================
# EMAIL
# ============================
SENDGRID_API_KEY=
FROM_EMAIL=

# ============================
# AI (não usar em produção sem chaves válidas)
